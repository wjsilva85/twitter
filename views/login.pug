extends layouts/login-layout.pug

block content
    .loginContainer
        h1 Login 
        form(method="post")
            p.successMessage #{success}
            p.errorMessage #{error}
            input(type="text", name="username", placeholder="Username or email", required="", value=username)
            input(type='password', name='password', placeholder='User password', required='', value=password)
            input(type="submit", value="Login")
        a(href="/register") Need an account? Register here.
        
    body 
        .wrapper
            .row
                nav.col-2
                    a(href="/")
                        i.fa-solid.fa-dove
                    a(href="/")
                        i.fa-solid.fa-house
                    a(href="/search")
                        i.fa-solid.fa-search
                    a(href="/notifications")
                        i.fa-solid.fa-bell
                    a(href="/messages")
                        i.fa-solid.fa-envelope
                    a(href="/profile")
                        i.fa-solid.fa-user
                    a(href="/")
                        i.fa-solid.fa-sign-out-alt
              

                    
                .mainSectionContainer.col-10.col-md-8.col-lg-6
                    block content

                .d-none.d-md-block.col-2.col-lg-4
